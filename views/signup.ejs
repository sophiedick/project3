
<!-- form action to /users as we are adding to user directory - this page will need to have a redirect-->
<!-- action POST as we are inputting to database-->
<section id="login" class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="form-group">
        <h2 style="text-align:center">Hello new user, please sign up!</h2>
          <form id="signup-form" action="/register" method='POST'>
          <label>Username:</label><br>
          <input type="text" class="form-control" name="username" placeholder="Username">
          <br>
          <label>Email:</label><br>
          <input type="email" class="form-control" name="email" placeholder="Email">
          <br>
          <label>Password:</label><br>
          <input type="password" class="form-control" name="password" placeholder="Password">
          <br>
          <label>Avatar:</label><br>
          <input type="text" class="form-control" name="avatar" placeholder="Link to image">
          <br>
      <!--will need to prevent default if we wish to use ajax -->
        <input type="submit" class="btn btn-default" value="Submit">
        </form> 
      </div>
    </div>
  </div>
</section>

