<hr>
<hr>
<hr>
<hr>

    <!-- END EDIT THREAD-->

<div class="container">
  <div class="row">
    <div class="col-md-10 centered comments-container" style="padding: 0">
      <section id="comments">
        <% for(i=0; i < thread.comments.length; i++){ %>

        <!-- --><!-- --><!-- --><!-- --><!-- --><!-- --><!-- -->

          <div id="<%= thread.comments[i].id %>" class="comment-block row">
            <div class="comments">
              <div class="col-md-2">
                <img class="comment-avatar" src="http://cumbrianrun.co.uk/wp-content/uploads/2014/02/default-placeholder-300x300.png">
              </div>
              <div class="col-md-10">
                <!-- Begin comment-meta -->
                <div class="comment-meta">
                  <p class="comment-author">
                    { Comment Author: } <!-- <%= thread.comments[i]%>-->
                  </p>             
                  <form class="delete-comment-form edit-comment-button" action="/api/category/<%= thread._id %>/comment/<%= thread.comments[i].id %>?_method=DELETE" method="post">
                    <button type="submit" data-id="<%= thread.comments[i].id %>" name="thread[topic]" class="delete deleteComment"><i class="fa fa-trash"></i></button>
                  </form>              
                 
                  <a class="button edit-comment-button" data-id="<%= thread._id %>" data-comment="<%= thread.comments[i]._id %>" href="">  <i class="fa fa-pencil"></i>
                  </a>
                </div> 
                <!-- End of comment-meta -->
                <!-- Begin comment body -->
                <p id="<%= thread.comments[i]._id %>comment" class="thread-comment"><%= thread.comments[i].body %></p>
              </div> <!-- End of .col-md-10 -->
          </div>


          <div class="edit-comment">
            <!-- Edit Comment Form-->
            <form action="/api/category/<%= thread._id %>/comment/<%= thread.comments[i].id %>?_method=PUT" id="<%= thread.comments[i].id %>edit" class="edit-comment-form editable">
              <input id="edit-body" class="thread-comment" value="<%= thread.comments[i].body %>" name="comment[body]">
              <input type="submit" id="edit-confirm" value="submit">
              <input type="submit" value="cancel" class="editable cancel">
            </form>

          </div> <!-- End of .edit-comment -->  
        </div> <!-- End of comments -->

        <!-- --><!-- --><!-- --><!-- --><!-- --><!-- --><!-- -->

        <% } %>
      </section>
    </div>
  </div>
</div>






