<section id="login" class="container">
  <div class="row">
    <div class="col-md-4 centered">
      <h2 style="text-align:center">Login to The 4-Rum</h2>
      <form id="login-form" class="login" method="post" action="/login">
        <div class="form-group">
          <label for="login-email" style="text-align: center; display:block">Email address</label>
          <input type="email" name="email" id="login-email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group">
          <label for="login-password" style="text-align: center; display:block">Password</label>
          <input type="password" name="password" id="login-password" class="form-control"  placeholder="Password">
        </div>
        <br>
        <button type="submit" class="btn btn-default one-hundred">Submit</button>
      </form>
    </div>
  </div>
</section> 


